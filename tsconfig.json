{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "importHelpers": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es6",
            "dom",
            "es2016.array.include"
        ],
        "declaration": true,
        "rootDir": "src",
        "outDir": "lib",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules/",
        "examples/",
        "lib/"
    ]
}